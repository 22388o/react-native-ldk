  "homepage": "https://github.com/coreyphillips/react-native-lightning#readme",
  "dependencies": {
    "base64-js": "^1.3.1",
    "extract-zip": "^2.0.1",
    "protobufjs": "^6.9.0"
  },
  "devDependencies": {
    "@types/base64-js": "^1.3.0",
    "@react-native-community/eslint-config": "2.0.0",
    "@types/react-native": "0.62.13",
