{
  "name": "react-native-lightning",
  "title": "React Native Lightning",
  "version": "0.0.4",
  "description": "React Native wrapper for Lndmobile",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "android",
    "index.js",
    "ios",
    "react-native-lightning.podspec",
    "dist"
  ],
  "keywords": [
    "javascript",
    "bitcoin",
    "lightning",
    "lnd",
    "neutrino"
  ],
  "scripts": {
    "test": "jest",
    "build": "rm -rf dist && mkdir dist/ && yarn protobuf && tsc -p ./src",
    "watch": "yarn run build -- -w",
    "lint": "yarn run lint:ts",
    "lint:ts": "eslint . --ext .ts,.tsx --fix",
    "protobuf": "pbjs -t static-module -w commonjs -o dist/rpc.js src/protos/rpc.proto && pbjs -t static-module src/protos/rpc.proto | pbts -o dist/rpc.d.ts - && cp dist/rpc.d.ts ./src/",
    "prepublish": "yarn lint && yarn run build && npm --no-git-tag-version version patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/synonymdev/react-native-lightning.git",
    "baseUrl": "https://github.com/synonymdev/react-native-lightning"
  },
  "keywords": [
    "react-native"
  ],
  "author": "synonymdev",
  "license": "MIT",
  "licenseFilename": "LICENSE",
  "readmeFilename": "README.md",
  "peerDependencies": {
    "react": "^16.8.1",
    "react-native": ">=0.60.0-rc.0 <1.0.x"
  },
  "devDependencies": {
    "@types/react-native": "0.62.13",
    "@typescript-eslint/eslint-plugin": "3.3.0",
    "@typescript-eslint/parser": "3.3.0",
    "eslint": "7.3.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-standard-with-typescript": "18.0.2",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-no-null": "1.0.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "prettier": "2.0.5",
    "react": "^16.9.0",
    "typescript": "3.9.5",
    "protobufjs": "^6.10.2"
  },
  "dependencies": {}
}
