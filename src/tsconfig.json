{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "outDir": "../dist",
//    "outDir": "../../../spectrum/node_modules/react-native-lightning/dist/",
    "jsx": "react-native",
    "lib": ["es2016"],
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true
  },
  "exclude" : ["./__tests__/*.ts"]
}
